{% extends 'svip/base.html.j2' %}

{% block blog %}

<link rel="stylesheet" href="{{ static('svip/css/post.css') }}" />

<div class="container">
    <h2>{{ post.title }}</h2>
    <i class="far fa-clock mr-1 text-muted"></i>
    <p class="text-muted d-inline">
        {{ post.created.hour }}:{{ post.created.minute }}, {{ post.created.year }}-{{ post.created.month }}-{{ post.created.day }}
    </p>
    <p class="mt-5">
        {{ post.body }}
    </p>
</div>

{% endblock %}
