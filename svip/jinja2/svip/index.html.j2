{% extends 'svip/base.html.j2' %}

{% block head %}
    {% set meta_desc = 'Portfolio of Kenneth V. Domingo with relevant coursework such as signal, video, and image processing' %}
    <meta name="keywords" content="signal processing, image processing, video processing, computational physics, applied physics, coursework, kvdomingo, Kenneth V. Domingo" />
    <meta name="description" content="{{ meta_desc }}" />
    <meta property="og:title" content="{{ active_page }} | Kenneth V. Domingo" />
    <meta name="og:description" content="{{ meta_desc }}" />
    <meta name="twitter:description" content="{{ meta_desc }}" />
{% endblock %}

{% block blog %}

<link rel="stylesheet" href="{{ static('svip/css/index.css') }}" />

<div class="row row-cols-1 row-cols-md-3">
    {% for course in course_list %}
        <div class="col mb-4">
            <div class="card card-image card-cover h-100">
                <div class="text-white text-center align-items-center h-100 rgba-black-strong py-5 px-4">
                    <div class="h-100">
                        <a class="card-title btn btn-outline-white my-3" href="{{ url('svip:subject', args=(course.slug,)) }}">
                            {{ course.name }}: {{ course.title }}
                        </a>
                        <p class="card-text">
                            {{ course.description }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}
