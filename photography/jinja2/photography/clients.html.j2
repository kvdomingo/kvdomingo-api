{% extends 'photography/base.html.j2' %}

{% block head %}
    {% set meta_desc = 'Clients section of the photography portfolio of Kenneth V. Domingo' %}
    <meta name="keywords" content="clients, photography, portfolio, kvdomingo, Kenneth V. Domingo" />
    <meta name="description" content="{{ meta_desc }}" />
    <meta property="og:title" content="{{ active_page }} | Kenneth V. Domingo" />
    <meta name="og:description" content="{{ meta_desc }}" />
    <meta name="twitter:description" content="{{ meta_desc }}" />
{% endblock %}

{% block gallery %}

<link rel="stylesheet" href="{{ static('photography/css/index.css') }}" />

<div class="row row-cols-1 row-cols-md-3">
    {% for client in client_list %}
        <div class="col mb-4">
            <div class="card card-image h-100" style="background-image: url('{{ client.cover_image }}'); background-size: cover; background-position: 50% 50%;">
                <div class="text-white text-center rgba-black-light py-5 px-5 h-100">
                    <div class="py-5">
                        <a href="{{ url('photography:client', args=(client.slug,)) }}" class="btn btn-outline-white btn-lg card-title my-5">{{ client.name }}</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

<script src="{{ static('photography/js/index.js') }}"></script>

{% endblock %}
